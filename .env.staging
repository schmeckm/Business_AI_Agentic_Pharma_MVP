# ========================================================================
# STAGING ENVIRONMENT (.env.staging)
# ========================================================================
# Mixed Environment: Teilweise SAP, teilweise Mock f端r Testing

# Basic Configuration
NODE_ENV=staging
PORT=4000

# Claude AI (Staging Key)
CLAUDE_API_KEY=your_staging_claude_api_key_here
CLAUDE_MODEL=claude-3-7-sonnet-20250219

# Feature flags (mixed f端r Testing)
FEATURE_CLAUDE=true
FEATURE_RAG=true
FEATURE_MPC=false
FEATURE_OAUTH=false

# Staging Configuration
ENABLE_AUTONOMOUS_MODE=true
COMPLIANCE_LEVEL=STANDARD
PREDICTIVE_PERIOD=14

# Logging (mehr Details f端r Testing)
LOG_LEVEL=info
NODE_ENV=staging

# Agent System Configuration
USE_LANGCHAIN=true
USE_ACTIONS=true
AGENT_MODE=langchain

# Staging Options
HOT_RELOAD=true
VERBOSE_LOGGING=true

# ========================================================================
# STAGING: MIXED SAP + MOCK INTEGRATION
# ========================================================================

# Mixed Data Source Types (teilweise SAP, teilweise Mock)
ORDERS_SOURCE_TYPE=sap          # Echte Orders aus SAP
ISSUES_SOURCE_TYPE=sap          # Echte Issues aus SAP
BATCHES_SOURCE_TYPE=mock        # Test-Batches (Mock)
COMPLIANCE_SOURCE_TYPE=mock     # Test-Compliance (Mock)

# SAP Staging Configuration
SAP_API_BASE_URL=http://sap-staging.company.local:8000/sap/opu/odata/sap
SAP_USERNAME=staging_user
SAP_PASSWORD=staging_password
SAP_CLIENT=100
SAP_DEFAULT_PLANT=1000

# Staging Plant Configuration
SAP_PLANT_ORDERS=1000
SAP_PLANT_ISSUES=1000
SAP_PLANT_BATCHES=1000
SAP_PLANT_COMPLIANCE=1000

# Staging Order Types & Controllers
SAP_ORDER_TYPE=ZP01
SAP_BATCH_ORDER_TYPE=ZPR1
SAP_MRP_CONTROLLER=001
SAP_BATCH_MRP_CONTROLLER=002

# Staging Work Centers
SAP_WORK_CENTER=STAGING001
SAP_NOTIFICATION_TYPE=M1

# Staging Performance Settings (kleinere Limits)
SAP_TIMEOUT=15000
SAP_MAX_ORDERS=500
SAP_MAX_ISSUES=200
SAP_MAX_BATCHES=500
SAP_MAX_COMPLIANCE=200

# Security Settings (weniger strikt)
SAP_SSL_VERIFY=false
SAP_CSRF_TOKEN_REQUIRED=false

# Company Configuration
SAP_COMPANY_CODE=1000
SAP_CONTROLLING_AREA=1000

# Date Ranges (k端rzere Testperioden)
ORDERS_FROM_DATE=2025-09-01T00:00:00
ORDERS_TO_DATE=2025-10-31T23:59:59
ISSUES_FROM_DATE=2025-09-01T00:00:00
BATCHES_FROM_DATE=2025-09-01T00:00:00
COMPLIANCE_FROM_DATE=2025-09-01T00:00:00

# Debug Settings
LOG_SAP_REQUESTS=true
LOG_SAP_RESPONSES=false
LOG_SAP_PERFORMANCE=true

MAX_API_CALLS_PER_MINUTE=5
MAX_CONCURRENT_EVENT_CHAINS=2
ENABLE_EVENT_PUBLISHING=true