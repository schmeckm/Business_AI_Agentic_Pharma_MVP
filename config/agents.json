    "skills": [
      {
        "intent": "cmo.create_pr",
        "description": "Create purchase requisitions"
      },
      {
        "intent": "cmo.create_po",
        "description": "Create purchase orders"
      },
      {
        "intent": "cmo.book_transport",
        "description": "Book transport and logistics"
      },
      {
        "intent": "cmo.track_shipment",
        "description": "Track shipment status"
      },
      {
        "intent": "cmo.send_production_plan",
        "description": "Send production plan to stakeholders"
      },
      {
        "intent": "cmo.request_release",
        "description": "Request batch release from site"
      },
      {
        "intent": "cmo.confirm_release",
        "description": "Confirm batch release"
      },
      {
        "intent": "cmo.create_asn",
        "description": "Create advance shipping notice"
      },
      {
        "intent": "cmo.handover_to_site_or_hub",
        "description": "Handle site or hub handover"
      },
      {
        "intent": "cmo.validate_materials",
        "description": "Validate material availability"
      },
      {
        "intent": "cmo.check_transport_capacity",
        "description": "Check transport capacity"
      },
      {
        "intent": "cmo.check_supply_availability",
        "description": "Check supply availability for orders"
      },
      {
        "intent": "cmo.validate_procurement_plan",
        "description": "Validate procurement strategies"
      }
    ],
    "capabilities": {
      "domains": ["supply-chain", "procurement", "logistics"],
      "resources": ["suppliers", "contracts", "transport"],
      "maxConcurrentTasks": 10
    },
    "config": {
      "autoApproval": {
        "threshold": 10000,
        "currency": "EUR"
      }
    }
  },
  {
